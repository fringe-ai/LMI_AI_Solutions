FROM --platform=linux/arm64/v8 nvcr.io/nvidia/l4t-ml:r32.6.1-py3
RUN apt-get update -y
RUN apt-get install pkg-config
RUN apt-get install python3-tk -y
WORKDIR /app
COPY ./requirements.txt /app/requirements.txt
RUN python3 -m pip install --upgrade pip setuptools
RUN pip install --upgrade pip
RUN pip3 install --global-option=build_ext --global-option="-I/usr/local/cuda/include" --global-option="-L/usr/local/cuda/lib64" pycuda
RUN pip install -r /app/requirements.txt
RUN git clone --recurse-submodules https://github.com/lmitechnologies/LMI_AI_Solutions.git
RUN git clone https://github.com/lmitechnologies/tensorrtx.git
RUN git clone https://github.com/jbeder/yaml-cpp.git
RUN cd /app/yaml-cpp && mkdir build && cd build && cmake -DBUILD_SHARED_LIBS=ON .. && make && make install

RUN echo $CUDA_CUDART_LIBRARY

RUN ["/bin/bash", "-c", "mkdir -p /app/build_trt && cd /app/build_trt && echo $CUDA_CUDART_LIBRARY \
    && cmake -DCUDA_CUDART_LIBRARY=/usr/local/cuda/lib64/stubs /app/tensorrtx/yolov5 && make"]


    